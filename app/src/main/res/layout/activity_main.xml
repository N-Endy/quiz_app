<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#333"
            android:orientation="horizontal"
            android:padding="12dp">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:cardCornerRadius="256dp">

                <ImageView
                    android:id="@+id/logo_picture"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/barcelona_logo" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_weight="6"
                android:text="@string/header_title"
                android:textColor="#FFFFFF"
                android:textSize="32sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:id="@+id/question_1"
                style="@style/layout_styling"
                android:background="#343434">

                <TextView
                    style="@style/quiz_number"
                    android:text="@string/quiz_1"
                    android:textColor="#FFFFFF" />

                <View
                    style="@style/view_style"
                    android:background="#989393" />

                <TextView
                    style="@style/layout_textview"
                    android:text="@string/question1"
                    android:textColor="#FFFFFF" />

                <RadioGroup
                    android:id="@+id/questionOne_radioGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/questionOne_option_one_1899"
                        style="@style/radio_button"
                        android:text="@string/_1899" />

                    <RadioButton
                        style="@style/radio_button"
                        android:text="@string/_1900" />

                    <RadioButton
                        style="@style/radio_button"
                        android:text="@string/_1901" />

                    <RadioButton
                        style="@style/radio_button"
                        android:text="@string/_1902" />

                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/question_2"
                style="@style/layout_styling"
                android:background="#F5F5F5">

                <TextView
                    style="@style/quiz_number"
                    android:text="@string/quiz_2"
                    android:textColor="#000000" />

                <View
                    style="@style/view_style"
                    android:background="#343434" />

                <TextView
                    style="@style/layout_textview"
                    android:text="@string/question2"
                    android:textColor="#000000" />

                <CheckBox
                    android:id="@+id/question2_optionOne_messi"
                    style="@style/checkbox_style"
                    android:text="@string/lionel_messi" />

                <CheckBox
                    android:id="@+id/question2_optionTwo_xavi"
                    style="@style/checkbox_style"
                    android:text="@string/xavi_hernandez" />

                <CheckBox
                    android:id="@+id/question2_optionThree_neymar"
                    style="@style/checkbox_style"
                    android:text="@string/neymar_jr" />

                <CheckBox
                    android:id="@+id/question2_optionFour_suarez"
                    style="@style/checkbox_style"
                    android:text="@string/luiz_suarez" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/question_3"
                style="@style/layout_styling"
                android:background="#343434">

                <TextView
                    style="@style/quiz_number"
                    android:text="@string/quiz_3"
                    android:textColor="#FFFFFF" />

                <View
                    style="@style/view_style"
                    android:background="#989393" />

                <TextView
                    style="@style/layout_textview"
                    android:text="@string/question_3"
                    android:textColor="#FFFFFF" />

                <EditText
                    android:id="@+id/question3_edit_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints="The new camp"
                    android:hint="@string/name_of_stadium"
                    android:inputType="textCapWords"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#92C541" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/question_4"
                style="@style/layout_styling"
                android:background="#F5F5F5">

                <TextView
                    style="@style/quiz_number"
                    android:text="@string/quiz_4"
                    android:textColor="#000000" />

                <View
                    style="@style/view_style"
                    android:background="#343434" />

                <TextView
                    style="@style/layout_textview"
                    android:text="@string/question_4"
                    android:textColor="#000000" />

                <CheckBox
                    android:id="@+id/question4_option1_arragones"
                    style="@style/checkbox_style"
                    android:text="@string/luis_arragones" />

                <CheckBox
                    android:id="@+id/question4_option2_pep"
                    style="@style/checkbox_style"
                    android:text="@string/pep_guardiola" />

                <CheckBox
                    android:id="@+id/question4_option3_enrique"
                    style="@style/checkbox_style"
                    android:text="@string/luiz_enrique" />

                <CheckBox
                    android:id="@+id/question4_option4_jose"
                    style="@style/checkbox_style"
                    android:text="@string/jose_mourinho" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/question_5"
                style="@style/layout_styling"
                android:background="#343434">

                <TextView
                    style="@style/quiz_number"
                    android:text="@string/quiz_5"
                    android:textColor="#FFFFFF" />

                <View
                    style="@style/view_style"
                    android:background="#989393" />

                <TextView
                    style="@style/layout_textview"
                    android:text="@string/question_5"
                    android:textColor="#FFFFFF" />

                <RadioGroup
                    android:id="@+id/questionFive_radioGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        style="@style/radio_button"
                        android:text="@string/tata_martino" />

                    <RadioButton
                        style="@style/radio_button"
                        android:text="@string/johan_cruff" />

                    <RadioButton
                        style="@style/radio_button"
                        android:text="@string/thomas_tuchel" />

                    <RadioButton
                        android:id="@+id/guardiola"
                        style="@style/radio_button"
                        android:text="@string/pep_guardiola" />

                </RadioGroup>

            </LinearLayout>

            <Button
                android:layout_width="106dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:onClick="submitButton"
                android:padding="8dp"
                android:text="Submit" />


        </LinearLayout>

    </ScrollView>


</LinearLayout>